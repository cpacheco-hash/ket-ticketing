# App Config
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ket

# NextAuth
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# Spotify OAuth
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/auth/callback/spotify

# Apple Music OAuth
NEXT_PUBLIC_APPLE_MUSIC_KEY_ID=your-apple-music-key-id
APPLE_MUSIC_TEAM_ID=your-apple-music-team-id
APPLE_MUSIC_PRIVATE_KEY=your-apple-music-private-key

# Fintoc
NEXT_PUBLIC_FINTOC_PUBLIC_KEY=your-fintoc-public-key
FINTOC_SECRET_KEY=your-fintoc-secret-key
FINTOC_WEBHOOK_SECRET=your-fintoc-webhook-secret

# Stripe (Fallback)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Mercado Pago (Fallback)
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token

# Redis
REDIS_URL=redis://localhost:6379

# AWS S3 (for images)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ket-images

# Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# Analytics
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Email (SendGrid/Resend)
EMAIL_FROM=noreply@ket.cl
SENDGRID_API_KEY=your-sendgrid-api-key

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# QR Code Secret
QR_SECRET_KEY=your-qr-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
